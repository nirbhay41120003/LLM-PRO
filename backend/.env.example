# Environment Configuration for Backend
# Copy this file to .env and configure your settings

# Server Configuration
PORT=5000
HOST=0.0.0.0
FLASK_ENV=production
FLASK_DEBUG=False

# CORS - Add your Vercel frontend URL here
# Use comma-separated values for multiple origins
CORS_ORIGINS=https://your-app.vercel.app,http://localhost:3000

# Model Configuration
HEALTH_MODEL_TYPE=biobert
# HEALTH_MODEL_DIR=/path/to/custom/model  # Optional: custom model directory

# Optional: HuggingFace API key for report analyzer
# HUGGINGFACE_API_KEY=your_api_key_here

# Tokenizer settings
TOKENIZERS_PARALLELISM=false
